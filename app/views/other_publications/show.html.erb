<div class="container offset-footer">

  <% if notice %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
  <% end %>

  <div class="row pl-2">
    <h1>Show Other Publication</h1>
  </div>

  <div class="row table-responsive">
    <table class="table table-hover">
      <tbody>
        <tr>
          <th scope="row">Author(s):</th>
          <td>
          <%= all_authors(@other_publication) %>
          </td>
        </tr>

        <tr>
          <th scope="row">UC College(s):</th>
          <td><%= all_colleges(@other_publication.college_ids) %></td>
        </tr>

        <tr>
          <th scope="row">UC Department or Division:</th>
          <td><%= @other_publication.uc_department %></td>
        </tr>

        <tr>
          <th scope="row">Work title:</th>
          <td><%= @other_publication.work_title %></td>
        </tr>

        <tr>
          <th scope="row">Other title:</th>
          <td><%= @other_publication.other_title %></td>
        </tr>

        <tr>
          <th scope="row">Volume:</th>
          <td><%= @other_publication.volume %></td>
        </tr>

        <tr>
          <th scope="row">Issue:</th>
          <td><%= @other_publication.issue %></td>
        </tr>

        <tr>
          <th scope="row">Page numbers:</th>
          <td><%= @other_publication.page_numbers %></td>
        </tr>

        <tr>
          <th scope="row">Publisher:</th>
          <td><%= @other_publication.publisher %></td>
        </tr>

        <tr>
          <th scope="row">City:</th>
          <td><%= @other_publication.city %></td>
        </tr>

        <tr>
          <th scope="row">Publication date:</th>
          <td><%= @other_publication.publication_date %></td>
        </tr>

        <tr>
          <th scope="row">Url:</th>
          <td><%= @other_publication.url %></td>
        </tr>

        <tr>
          <th scope="row">Doi:</th>
          <td><%= @other_publication.doi %></td>
        </tr>

        <tr>
          <th scope="row">Submitter:</th>
          <td><%= @other_publication.submitter_id %></td>
        </tr>
      </tbody>
      </table>
    </div>
    
    <div class="row">
      <%= link_to 'Edit', edit_other_publication_path(@other_publication), class: "btn btn-primary" %>
    </div>