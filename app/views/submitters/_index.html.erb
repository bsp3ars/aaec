<% if session[:admin] %>

<div class="row pl-2">
  <h1>Submitter #<%= @submitter.id%></h1>
</div>

<% else %>

<div class="row pl-2">
  <h1>Contact Information</h1>
</div>

<% end %>

<div class="row">
    <div class="col text-center my-auto"><%= @submitter.first_name %> <%= @submitter.last_name %></div>
    <div class="col text-center my-auto"><%= college_name(@submitter.college) %></div>
    <div class="col text-center my-auto"><%= @submitter.department %></div>
    <div class="col text-center my-auto"><%= @submitter.mailing_address %></div>
    <div class="col text-center my-auto"><%= @submitter.phone_number %></div>
    <div class="col text-center my-auto"><%= @submitter.email_address %></div>
    <div class="col text-center my-auto"><%= link_to 'Edit', edit_submitter_path(@submitter) %></div>
</div>

