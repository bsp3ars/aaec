<div class="container offset-footer">

    <% if notice %>
        <div class="alert alert-success" role="alert">
            <%= notice %>
        </div>
    <% end %>

    <% if session[:admin] && params[:id].nil? %>

        <%= render 'submitters/index_admin', submitters: @submitters %>

    <% else %>

        <%= render 'submitters/index', submitters: @submitters %>

    <% end %>

    <%= render 'books/index', books: @books %>

    <%= render 'other_publications/index', other_publications: @other_publications %>

</div>