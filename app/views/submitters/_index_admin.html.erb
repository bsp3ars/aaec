<div class="row">
  <h1 class="pl-2">Submitters <%= "(#{@submitter_count})" %></h1>
  <div class="ml-auto my-auto pl-3">
    <%= pagy_bootstrap_nav(@pagy_submitters).html_safe %>
  </div>
</div>

<div class="row table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>First name</th>
        <th>Last name</th>
        <th>UC College</th>
        <th>UC Department or Division</th>
        <th>Mail Location</th>
        <th>Phone number</th>
        <th>Email address</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @submitters.each do |submitter| %>
        <tr>
          <td><%= link_to submitter.id.to_s, publications_id(submitter.id)  %></td>
          <td><%= submitter.first_name %></td>
          <td><%= submitter.last_name %></td>
          <td><%= submitter.college %></td>
          <td><%= submitter.department %></td>
          <td><%= submitter.mailing_address %></td>
          <td><%= submitter.phone_number %></td>
          <td><%= mail_to submitter.email_address %></td>
          <td><%= link_to 'Show', submitter %></td>
          <td><%= link_to 'Edit', edit_submitter_path(submitter) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>