<%= form_with(model: submitter, local: true) do |form| %>
  <% if submitter.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(submitter.errors.count, "error") %> found:</h4>
      <hr>
      <% submitter.errors.full_messages.each do |message| %>
      <p class="mb-0"><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, required: true, class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :college %>
      <%= select_tag "submitter[college]", options_from_collection_for_select(College.all, :id, :name), class: "form-control" %> 
    </div>

    <div class="form-group col-md-6">
      <%= form.label :department %>
      <%= form.text_field :department, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :mailing_address %>
      <%= form.text_field :mailing_address, required: true, class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :phone_number %>
      <%= form.text_field :phone_number, required: true, class: "form-control" %>
      <small class="form-text text-muted">Must be in the form ###-###-####</small>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :email_address %>
      <%= form.text_field :email_address, required: true, class: "form-control" %>
    </div>
  </div>

  <%= form.submit "Submit", class: "btn btn-primary" %>

<% end %>