<%= form_with(model: submitter, local: true) do |form| %>
  <% if submitter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(submitter.errors.count, "error") %> prohibited this submitter from being saved:</h2>

      <ul>
      <% submitter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, required: true %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, required: true %>
  </div>

  <div class="field">
    <%= form.label :college %>
    <%= form.select :college, ["Allied Health Sciences", "Arts and Sciences", "Business", "College-Conservatory of Music", "Design, Architecture, Art, and Planning", "Education, Criminal Justice, and Human Services", "Engineering and Applied Science", "The Gradute School", "Law", "Medicine", "Nursing", "Pharmacy", "UCBA", "UC Clermont", "UC Libraries", "Other"] %>
  </div>

  <div class="field">
    <%= form.label :department %>
    <%= form.text_field :department %>
  </div>

  <div class="field">
    <%= form.label :mailing_address %>
    <%= form.text_field :mailing_address, required: true %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, required: true %>
  </div>

  <div class="field">
    <%= form.label :email_address %>
    <%= form.text_field :email_address, required: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
