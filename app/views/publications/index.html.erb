<div class="container offset-footer">

    <% if notice %>
    
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= notice %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% end %>

    <% if session[:admin] && params[:id].nil? %>

        <%= render 'submitters/index_admin', submitters: @submitters %>

    <% else %>

        <%= render 'publications/notice' %>

        <%= render 'submitters/index', submitters: @submitters %>

    <% end %>

    <%= render 'artworks/index', artworks: @artworks %>

    <%= render 'books/index', books: @books %>

    <%= render 'book_chapters/index', book_chapters: @book_chapters %>
    
    <%= render 'digital_projects/index', digital_projects: @digital_projects %>

    <%= render 'editings/index', editings: @editings %>

    <%= render 'films/index', films: @films %>

    <%= render 'journal_articles/index', journal_articles: @journal_articles %>

    <%= render 'musical_scores/index', musical_scores: @musical_scores %>

    <%= render 'photographies/index', photographies: @photographies %>

    <%= render 'physical_media/index', physical_media: @physical_media %>
    
    <%= render 'plays/index', plays: @plays %>

    <%= render 'public_performances/index', public_performances: @public_performances %>

    <%= render 'other_publications/index', other_publications: @other_publications %>

</div>